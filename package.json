{
  "name": "pollsbot",
  "version": "0.0.1",
  "description": "TBD",
  "main": "index.js",
  "author": "",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "npm run build && pm2 start --merge-logs --source-map-support . --name \"POLLBOT\" && pm2 logs POLLBOT",
    "dev": "pm2 start --merge-logs --source-map-support . --watch --name \"POLLBOT\" && pm2 monit POLLBOT",
    "stop": "pm2 stop POLLBOT",
    "restart": "npm run stop && npm run dev",
    "nodemon": "nodemon -r source-map-support/register .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"**/*.ts\" \"**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "deploy": "git push heroku master",
    "local": "heroku local worker",
    "main:on": "heroku maintenance:on",
    "main:off": "heroku maintenance:off",
    "h:restart": "heroku ps:restart worker",
    "h:start": "npm run main:off && heroku ps:scale worker=1 && npm run h:restart",
    "h:stop": "npm run main:on && heroku ps:scale worker=0"
  },
  "contributors": [
    {
      "name": "Nathan Chung"
    }
  ],
  "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "dependencies": {
    "@types/node": "^14.10.2",
    "countapi-js": "^1.0.1",
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "mongoose": "^5.10.5",
    "pm2": "^4.4.1",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@typegoose/typegoose": "7.3.5",
    "@types/mongoose": "5.11.96",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "eslint": "7.9.0",
    "eslint-config-google": "0.14.0"
  }
}
